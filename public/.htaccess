# Activar el motor de reescritura
RewriteEngine On

# Configurar la base si el proyecto no está en la raíz del servidor
RewriteBase /ACG/public/

# Evita reescribir archivos o carpetas existentes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirige todas las demás URLs a index.php pasándolas como parámetro 'url'
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

# Opcional: Evitar cache de navegador para desarrollo
<IfModule mod_headers.c>
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
</IfModule>
